{
  "version": 2,
  "builds": [
    {
      "src": "backend_flask/app.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend_nextjs/package.json",
      "use": "@vercel/next",
      "config": { "distDir": "out" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend_flask/app.py"
    },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/frontend_nextjs/$1" }
  ]
}